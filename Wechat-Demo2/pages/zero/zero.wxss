/* pages/zero/zero.wxss */
.shop-item {
    display: flex;
    padding: 20rpx;
    border: 1rpx solid #f1f1f1;
    border-radius: 10rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
    margin: 10rpx;
}
.thumb image {
    width: 250rpx;
    height: 250rpx;
    display: block;
    margin-right: 20rpx;
}
.info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 24rpx;
}
.shop-title {
    font-size: 30rpx;
    font-weight: 600;
}