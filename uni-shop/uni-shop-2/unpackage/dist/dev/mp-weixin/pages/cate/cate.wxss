/* 水平间距 */
.scroll-view-container {
  display: flex;
}
.left-scroll-view {
  width: 120px;
  display: flex;
  flex-direction: column;
}
.left-item {
  background-color: #f1f1f1;
  line-height: 60px;
  text-align: center;
  font-size: 12px;
}
.left-item.active {
  background-color: #fff;
  position: relative;
}
.left-item.active::before {
  content: '';
  width: 2px;
  height: 30px;
  background-color: #ff0815;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.cate-lv2-title {
  font-size: 12px;
  font-weight: 600;
  text-align: center;
  padding: 15px 0;
}
.cate-lv2-list {
  display: flex;
  flex-wrap: wrap;
}
.cate-lv2-list .cate-lv2-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}
.cate-lv2-list .cate-lv2-item image {
  width: 60px;
  height: 60px;
}
.cate-lv2-list .cate-lv2-item text {
  font-size: 12px;
}

